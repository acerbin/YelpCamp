<%- include("../partials/header") %>

<div clas="container">
	<div class="row">
		<h2 style="width: 30%; margin: 0 auto; text-align: center;">
		Create a new campground
		</h2>
	</div>
	<div class="row">
		<div style="width: 30%; margin: 25px auto;">			
			<form action="/campgrounds" method="POST" class="mt-3">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="name" name="name">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="image">	
				</div>	
				<div class="form-group">
					<input class="form-control" type="text" placeholder="description" name="description">	
				</div>	
				<div class="form-group">
					<button class="btn btn-lg btn-dark btn-block">
						Submit
					</button>	
				</div>				
			</form>
			<br>
			<a href="/campgrounds">Go Back</a>
		</div>
		
	</div>
	
	
</div>
<%- include("../partials/footer") %>
