<%- include("../partials/header") %>



<div class="container">
	
	<header class="jumbotron">
		<div class="container">
			<h1>
				Welcome to YelpCamp
			</h1>
			<p>
				View our hand picked campgrounds from all over the world.
			</p>
			<p>
				<a class="btn btn-dark btn-lg" href="/campgrounds/new">Add New Campground</a>
			</p>
		</div>

	</header>
	
	<div class="row text-center">

			
		<% campgrounds.forEach((campground) => { %>
			<div class="col-md-3 col-sm-6">
				<div class="card mt-3">
					<img class="card-img-top" src="<%= campground.image %>">
					<div class="card-body">
						<h4 class="card-text">
							<%= campground.name %>
							<p class="mt-2">
								<a href="/campgrounds/<%= campground._id %>" class="btn btn-dark">More Info</a>
							</p>
						</h4>					
					</div>
				</div>
			</div>

		<% }) %>

	</div>


</div>

<%- include("../partials/footer") %>
