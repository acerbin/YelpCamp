<%- include("../partials/header") %>

<div clas="container">
	<div class="row">
		<h2 style="width: 30%; margin: 0 auto; text-align: center;">
		Add a comment for <%= campground.name %>
		</h2>
	</div>
	<div class="row">
		<div style="width: 30%; margin: 25px auto;">			
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST" class="mt-3">
				<div class="form-group">
					<textarea class="form-control" type="text" name="comment[text]">comment text</textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-dark btn-block">
						Submit
					</button>	
				</div>				
			</form>
			<br>
			<a href="/campgrounds">Go Back</a>
		</div>
		
	</div>
	
	
</div>
<%- include("../partials/footer") %>
